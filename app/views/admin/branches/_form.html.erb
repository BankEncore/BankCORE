<%= form_with model: branch, url: branch.persisted? ? admin_branch_path(branch) : admin_branches_path, method: branch.persisted? ? :patch : :post, class: "card bg-base-100 border border-base-300" do |f| %>
  <div class="card-body">
    <% if branch.errors.any? %>
      <div class="alert alert-error">
        <ul>
          <% branch.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-control">
      <%= f.label :code, class: "label" %>
      <%= f.text_field :code, class: "input input-bordered", required: true %>
    </div>

    <div class="form-control">
      <%= f.label :name, class: "label" %>
      <%= f.text_field :name, class: "input input-bordered", required: true %>
    </div>

    <div class="form-control mt-4">
      <%= f.submit branch.persisted? ? "Update Branch" : "Create Branch", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
