<%= render "admin/shared/page_header",
  title: @user.display_label,
  description: "User details and role assignments.",
  secondary_button_path: admin_users_path,
  secondary_button_label: "Back to Users",
  primary_button_path: edit_admin_user_path(@user),
  primary_button_label: "Edit" %>

<div class="space-y-4">
  <section class="card bg-base-100 border border-base-300">
    <div class="card-body">
      <dl class="grid grid-cols-1 gap-2 sm:grid-cols-2">
        <dt class="font-medium text-slate-600">Display name</dt>
        <dd><%= @user.display_name.presence || "—" %></dd>
        <dt class="font-medium text-slate-600">Email</dt>
        <dd><%= @user.email_address %></dd>
        <dt class="font-medium text-slate-600">Teller number</dt>
        <dd><%= @user.teller_number.presence || "—" %></dd>
        <dt class="font-medium text-slate-600">First name</dt>
        <dd><%= @user.first_name.presence || "—" %></dd>
        <dt class="font-medium text-slate-600">Last name</dt>
        <dd><%= @user.last_name.presence || "—" %></dd>
        <dt class="font-medium text-slate-600">PIN</dt>
        <dd><%= @user.password_hash.present? ? "Set" : "Not set" %></dd>
      </dl>
    </div>
  </section>

  <%= render "admin/users/user_roles_section", user: @user, user_roles: @user_roles %>
</div>
