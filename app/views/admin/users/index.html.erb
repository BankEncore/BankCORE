<%= render "admin/shared/page_header",
  title: "Users",
  description: "Manage system users and their role assignments.",
  primary_button_path: new_admin_user_path,
  primary_button_label: "Add User" %>

<section class="card bg-base-100 border border-base-300">
  <div class="card-body">
    <div class="overflow-x-auto">
      <table class="table">
        <thead>
          <tr>
            <th>Email</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email_address %></td>
              <td class="text-right">
                <%= link_to "View", admin_user_path(user), class: "btn btn-ghost btn-sm" %>
                <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-ghost btn-sm" %>
                <%= button_to "Delete", admin_user_path(user), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-ghost btn-sm text-error" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
