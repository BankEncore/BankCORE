<% if f.object.errors.any? %>
  <div class="alert alert-error">
    <ul>
      <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-control">
  <%= f.label :code, class: "label" %>
  <%= f.text_field :code, class: "input input-bordered", required: true, placeholder: "e.g. safe_deposit_box_fee" %>
</div>

<div class="form-control">
  <%= f.label :label, class: "label" %>
  <%= f.text_field :label, class: "input input-bordered", required: true, placeholder: "e.g. Safe Deposit Box Fee" %>
</div>

<div class="form-control">
  <%= f.label :income_account_reference, class: "label" %>
  <%= f.text_field :income_account_reference, class: "input input-bordered", required: true, placeholder: "e.g. income:safe_deposit_box_fee" %>
</div>

<div class="form-control">
  <%= f.label :default_amount_cents, "Default Amount (cents, optional)", class: "label" %>
  <%= f.number_field :default_amount_cents, class: "input input-bordered", min: 0, step: 1, placeholder: "Leave blank for no default" %>
</div>

<div class="form-control">
  <%= f.label :display_order, class: "label" %>
  <%= f.number_field :display_order, class: "input input-bordered", min: 0, value: f.object.display_order || 0 %>
</div>

<div class="form-control">
  <label class="label cursor-pointer justify-start gap-2">
    <%= f.check_box :memo_required, class: "checkbox" %>
    <span class="label-text">Memo required</span>
  </label>
</div>

<div class="form-control">
  <label class="label cursor-pointer justify-start gap-2">
    <%= f.check_box :is_active, class: "checkbox" %>
    <span class="label-text">Active</span>
  </label>
</div>
