<% account_transactions = local_assigns.fetch(:account_transactions, account.account_transactions) %>
<% sections = local_assigns.fetch(:sections, [:balance, :history]) %>
<% balance_cents = account.balance_cents %>
<% balance_formatted = number_to_currency(balance_cents / 100.0) %>

<% if sections.include?(:balance) %>
<section class="card bg-base-100 border border-base-300 mt-4">
  <div class="card-body">
    <h2 class="card-title text-base">Current Balance</h2>
    <p class="text-2xl font-mono tabular-nums <%= balance_cents.negative? ? 'text-error' : '' %>">
      <%= balance_formatted %>
    </p>
  </div>
</section>
<% end %>

<% if sections.include?(:history) %>
<section class="card bg-base-100 border border-base-300 mt-4">
  <div class="card-body">
    <h2 class="card-title text-base">Transaction History</h2>
    <div class="overflow-x-auto rounded-box border border-base-content/5 bg-base-100">
      <table class="table table-sm table-zebra w-full">
        <thead>
          <tr>
            <th>Posted</th>
            <th>Type</th>
            <th>Direction</th>
            <th class="text-right">Amount</th>
            <th class="text-right">Receipt</th>
          </tr>
        </thead>
        <tbody>
          <% if account_transactions.any? %>
            <% account_transactions.each do |at| %>
              <% tt = at.teller_transaction %>
              <% signed_cents = at.direction == "credit" ? at.amount_cents : -at.amount_cents %>
              <tr class="hover">
                <td class="tabular-nums"><%= tt.posted_at&.strftime("%Y-%m-%d %H:%M") || "—" %></td>
                <td><%= tt.transaction_type.titleize %></td>
                <td>
                  <% if at.direction == "credit" %>
                    <span class="badge badge-sm badge-success badge-outline">Credit</span>
                  <% else %>
                    <span class="badge badge-sm badge-error badge-outline">Debit</span>
                  <% end %>
                </td>
                <td class="text-right font-mono tabular-nums <%= signed_cents.negative? ? 'text-error font-medium' : 'text-success' %>">
                  <%= signed_cents.negative? ? "" : "+" %><%= number_to_currency(signed_cents / 100.0) %>
                </td>
                <td class="text-right">
                  <% if tt.posting_batch.present? %>
                    <%= link_to "Receipt", teller_receipt_path(request_id: tt.request_id), class: "btn btn-ghost btn-xs" %>
                  <% else %>
                    <span class="opacity-50 text-xs">—</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5" class="text-center opacity-70 py-8">No transactions yet.</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
<% end %>
