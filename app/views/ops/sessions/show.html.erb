<%# DROP-IN SAFE: app/views/ops/sessions/show.html.erb (or your report view)
    Goals:
    - IBM Plex Sans + tabular-nums for report values (no mono by default)
    - Cleaner DL layout (grid KV items instead of flex rows inside a grid)
    - Consistent section headers + optional right-side meta
    - Tighter, more “ledger-like” tables without changing your theme files
%>

<% content_for :title, "Session #{@session.id}" %>
<% money = ->(cents) { number_to_currency((cents || 0) / 100.0) } %>

<div class="space-y-4 report font-sans [font-variant-numeric:tabular-nums]">
  <%# =========================
      Session Summary (top)
     ========================= %>
  <section class="ui-panel bg-base-100 border-base-300">
    <div class="ui-panel-pad p-3 md:p-4">
      <div class="flex flex-wrap items-start justify-between gap-4">
        <div>
          <h2 class="ui-section-title text-lg font-bold">Session <%= @session.id %></h2>
          <div class="mt-1 text-xs text-slate-500">
            <span class="font-medium text-slate-700"><%= @session.closed? ? "Closed" : "Open" %></span>
            <% if @session.opened_at.present? %>
              • Opened <span class="[font-variant-numeric:tabular-nums]"><%= @session.opened_at.strftime("%Y-%m-%d %H:%M") %></span>
            <% end %>
            <% if @session.closed_at.present? %>
              • Closed <span class="[font-variant-numeric:tabular-nums]"><%= @session.closed_at.strftime("%Y-%m-%d %H:%M") %></span>
            <% end %>
          </div>
        </div>

        <div class="flex items-center gap-2">
          <%= link_to "Back to Sessions", ops_sessions_path, class: "btn btn-ghost btn-sm" %>
        </div>
      </div>

      <div class="divider my-3"></div>

      <div class="flex items-center justify-between gap-4">
        <h3 class="text-sm font-semibold text-slate-800">Session Summary</h3>
        <div class="text-xs text-slate-500">
          Teller session ID <span class="font-medium text-slate-700">#<%= @session.id %></span>
        </div>
      </div>

      <div class="divider my-3"></div>

      <%# Grid-friendly KV items (avoid .ui-kv-row flex inside grid) %>
      <dl class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-3 text-sm">
        <%# helper-ish pattern: .ui-kv-item is inline here via grid classes %>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Teller</dt>
          <dd class="text-slate-900"><%= @session.user&.display_label || "—" %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Branch</dt>
          <dd class="text-slate-900"><%= @session.branch&.name || "—" %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Workstation</dt>
          <dd class="text-slate-900"><%= @session.workstation&.name || "—" %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Drawer</dt>
          <dd class="text-slate-900"><%= @session.cash_location&.name || "—" %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Opened at</dt>
          <dd class="text-slate-900 [font-variant-numeric:tabular-nums]"><%= @session.opened_at&.strftime("%Y-%m-%d %H:%M") || "—" %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Closed at</dt>
          <dd class="text-slate-900 [font-variant-numeric:tabular-nums]"><%= @session.closed_at&.strftime("%Y-%m-%d %H:%M") || "—" %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Opening cash</dt>
          <dd class="font-semibold text-slate-900 [font-variant-numeric:tabular-nums]"><%= money[@session.opening_cash_cents] %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500"><%= @session.closed? ? "Expected closing" : "Expected cash now" %></dt>
          <dd class="font-semibold text-slate-900 [font-variant-numeric:tabular-nums]">
            <%= @session.closed? ? money[@session.expected_closing_cash_cents] : money[@session.expected_cash_cents] %>
          </dd>
        </div>

        <% if @session.closed? %>
          <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
            <dt class="text-xs uppercase tracking-wide text-slate-500">Declared closing</dt>
            <dd class="font-semibold text-slate-900 [font-variant-numeric:tabular-nums]"><%= money[@session.closing_cash_cents] %></dd>
          </div>

          <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
            <dt class="text-xs uppercase tracking-wide text-slate-500">Variance</dt>
            <dd class="[font-variant-numeric:tabular-nums]">
              <% if @session.cash_variance_cents.present? && @session.cash_variance_cents != 0 %>
                <span class="inline-flex items-center gap-2">
                  <span class="badge <%= @session.cash_variance_cents.negative? ? 'badge-error' : 'badge-success' %>">
                    <%= @session.cash_variance_cents.negative? ? 'Short' : 'Over' %>
                  </span>
                  <span class="font-semibold <%= @session.cash_variance_cents.negative? ? 'text-error' : 'text-success' %>">
                    <%= money[@session.cash_variance_cents] %>
                  </span>
                </span>
              <% else %>
                —
              <% end %>
            </dd>
          </div>

          <% if @session.cash_variance_reason.present? %>
            <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3 sm:col-span-2 lg:col-span-3">
              <dt class="text-xs uppercase tracking-wide text-slate-500">Variance reason</dt>
              <dd class="text-slate-900"><%= @session.cash_variance_reason %></dd>
            </div>
          <% end %>

          <% if @session.cash_variance_notes.present? %>
            <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3 sm:col-span-2 lg:col-span-3">
              <dt class="text-xs uppercase tracking-wide text-slate-500">Variance notes</dt>
              <dd class="text-slate-900"><%= @session.cash_variance_notes %></dd>
            </div>
          <% end %>
        <% end %>
      </dl>
    </div>
  </section>

  <%# =========================
      Cash Reconciliation
     ========================= %>
  <section class="ui-panel bg-base-100 border-base-300">
    <div class="ui-panel-pad p-3 md:p-4">
      <div class="flex items-center justify-between gap-4">
        <h3 class="text-sm font-semibold text-slate-800">Cash Reconciliation</h3>
        <div class="text-xs text-slate-500">
          Net cash movement <span class="font-semibold text-slate-800 [font-variant-numeric:tabular-nums]"><%= money[@cash_in_cents - @cash_out_cents] %></span>
        </div>
      </div>

      <div class="divider my-3"></div>

      <dl class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-x-8 gap-y-3 text-sm">
        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Cash in</dt>
          <dd class="font-semibold [font-variant-numeric:tabular-nums]"><%= money[@cash_in_cents] %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Cash out</dt>
          <dd class="font-semibold [font-variant-numeric:tabular-nums]"><%= money[@cash_out_cents] %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Net cash</dt>
          <dd class="font-semibold [font-variant-numeric:tabular-nums]"><%= money[@cash_in_cents - @cash_out_cents] %></dd>
        </div>

        <div class="grid grid-cols-[10rem_1fr] items-baseline gap-x-3">
          <dt class="text-xs uppercase tracking-wide text-slate-500">Expected (opening + net)</dt>
          <dd class="font-semibold [font-variant-numeric:tabular-nums]"><%= money[@session.opening_cash_cents + @cash_in_cents - @cash_out_cents] %></dd>
        </div>
      </dl>
    </div>
  </section>

  <%# =========================
      Approval Events
     ========================= %>
  <section class="ui-panel bg-base-100 border-base-300">
    <div class="ui-panel-pad p-3 md:p-4">
      <div class="flex items-center justify-between gap-4">
        <h3 class="text-sm font-semibold text-slate-800">Approval Events</h3>
        <div class="text-xs text-slate-500"><%= @approval_events.size %> event(s)</div>
      </div>

      <div class="divider my-3"></div>

      <% if @approval_events.any? %>
        <div class="overflow-x-auto">
          <table class="table w-full table-zebra text-sm">
            <thead class="text-xs uppercase tracking-wide text-slate-600">
              <tr>
                <th class="py-2">Approval Type</th>
                <th class="py-2">Initiated By</th>
                <th class="py-2">Approved By</th>
                <th class="py-2">Timestamp</th>
                <th class="py-2">Linked Ref #</th>
              </tr>
            </thead>
            <tbody class="[&>tr>td]:py-2">
              <% @approval_events.each do |event| %>
                <% meta = begin; JSON.parse(event.metadata.to_s); rescue; {}; end %>
                <% requester = meta["requester_user_id"].present? ? User.find_by(id: meta["requester_user_id"]) : nil %>
                <tr>
                  <td><%= (meta["policy_trigger"] || "override").to_s.humanize %></td>
                  <td><%= requester&.display_label || "—" %></td>
                  <td><%= event.actor_user&.display_label || "—" %></td>
                  <td class="[font-variant-numeric:tabular-nums]"><%= event.occurred_at&.strftime("%Y-%m-%d %H:%M") || "—" %></td>
                  <td class="[font-variant-numeric:tabular-nums] text-sm">
                    <% if meta["request_id"].present? %>
                      <%= link_to meta["request_id"], teller_receipt_path(request_id: meta["request_id"]), class: "link link-hover", target: "_blank" %>
                    <% else %>
                      —
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-sm text-slate-500">No approval events in this session.</p>
      <% end %>
    </div>
  </section>

  <%# =========================
      Transactions
     ========================= %>
  <section class="ui-panel bg-base-100 border-base-300">
    <div class="ui-panel-pad p-3 md:p-4">
      <div class="flex items-center justify-between gap-4">
        <h3 class="text-sm font-semibold text-slate-800">Transactions</h3>
        <div class="text-xs text-slate-500"><%= @transactions.size %> transaction(s)</div>
      </div>

      <div class="divider my-3"></div>

      <div class="overflow-x-auto">
        <table class="table w-full table-zebra text-sm">
          <thead class="text-xs uppercase tracking-wide text-slate-600">
            <tr>
              <th class="py-2">Time</th>
              <th class="py-2">Type</th>
              <th class="py-2">Ref #</th>
              <th class="py-2 text-right">Amount</th>
              <th class="py-2 text-right">Cash impact</th>
              <th class="py-2">Approved?</th>
              <th class="py-2"></th>
            </tr>
          </thead>
          <tbody class="[&>tr>td]:py-2">
            <% if @transactions.any? %>
              <% @transactions.each do |tx| %>
                <% cash_impact = tx.cash_movements.sum { |m| m.direction == "in" ? m.amount_cents : -m.amount_cents } %>

                <tr class="<%= tx.transaction_type == "reversal" ? "bg-slate-50 dark:bg-slate-800/50" : "" %>">
                  <td class="[font-variant-numeric:tabular-nums]"><%= tx.posted_at&.strftime("%Y-%m-%d %H:%M") || "—" %></td>

                  <td>
                    <%= tx.transaction_type.humanize %>
                    <% if tx.transaction_type == "reversal" %>
                      <span class="badge badge-neutral text-xs ml-1">Reversal</span>
                    <% elsif tx.reversed? %>
                      <span class="badge badge-neutral text-xs ml-1">Reversed</span>
                    <% end %>
                  </td>

                  <td class="[font-variant-numeric:tabular-nums] text-sm">
                    <%= tx.request_id %>
                    <% if tx.transaction_type == "reversal" && tx.reversal_of_teller_transaction.present? %>
                      <br><span class="text-xs text-slate-500">Reverses <span class="[font-variant-numeric:tabular-nums]"><%= tx.reversal_of_teller_transaction.request_id %></span></span>
                    <% elsif tx.reversed? && tx.reversed_by_teller_transaction.present? %>
                      <br>
                      <span class="text-xs text-slate-500">
                        Reversed by
                        <%= link_to tx.reversed_by_teller_transaction.request_id,
                                    teller_receipt_path(request_id: tx.reversed_by_teller_transaction.request_id),
                                    class: "link link-hover",
                                    target: "_blank" %>
                      </span>
                    <% end %>
                  </td>

                  <td class="text-right font-semibold [font-variant-numeric:tabular-nums]"><%= money[tx.amount_cents] %></td>

                  <td class="text-right font-semibold [font-variant-numeric:tabular-nums]">
                    <% if cash_impact != 0 %>
                      <span class="<%= cash_impact.positive? ? 'text-success' : 'text-error' %>">
                        <%= cash_impact.positive? ? "+" : "" %><%= money[cash_impact] %>
                      </span>
                    <% else %>
                      —
                    <% end %>
                  </td>

                  <td><%= tx.approved_by_user.present? ? tx.approved_by_user.display_label : "—" %></td>

                  <td class="text-right">
                    <%= link_to "Receipt", teller_receipt_path(request_id: tx.request_id), class: "btn btn-ghost btn-sm", target: "_blank" %>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="7" class="text-center text-slate-500 py-4">No transactions in this session.</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <%# =========================
      Vault Transfers (optional)
     ========================= %>
  <% if @vault_transfers.any? %>
    <section class="ui-panel bg-base-100 border-base-300">
      <div class="ui-panel-pad p-3 md:p-4">
        <div class="flex items-center justify-between gap-4">
          <h3 class="text-sm font-semibold text-slate-800">Vault Transfers</h3>
          <div class="text-xs text-slate-500">
            <%= @vault_transfers.size %> transfer(s) • total
            <span class="font-semibold text-slate-800 [font-variant-numeric:tabular-nums]"><%= money[@vault_transfers.sum(&:amount_cents)] %></span>
          </div>
        </div>

        <div class="divider my-3"></div>

        <div class="overflow-x-auto">
          <table class="table w-full table-zebra text-sm">
            <thead class="text-xs uppercase tracking-wide text-slate-600">
              <tr>
                <th class="py-2">Time</th>
                <th class="py-2">From</th>
                <th class="py-2">To</th>
                <th class="py-2 text-right">Amount</th>
                <th class="py-2">Ref #</th>
                <th class="py-2"></th>
              </tr>
            </thead>

            <tbody class="[&>tr>td]:py-2">
              <% @vault_transfers.each do |tx| %>
                <% vt = (tx.posting_batch&.metadata || {}).dig("vault_transfer") || {} %>
                <% vt = vt.with_indifferent_access if vt.respond_to?(:with_indifferent_access) %>
                <% source_ref = vt["source_cash_account_reference"] || vt[:source_cash_account_reference] %>
                <% dest_ref   = vt["destination_cash_account_reference"] || vt[:destination_cash_account_reference] %>

                <tr>
                  <td class="[font-variant-numeric:tabular-nums]"><%= tx.posted_at&.strftime("%Y-%m-%d %H:%M") || "—" %></td>
                  <td><%= cash_location_display_name(source_ref, @session.branch) %></td>
                  <td><%= cash_location_display_name(dest_ref, @session.branch) %></td>
                  <td class="text-right font-semibold [font-variant-numeric:tabular-nums]"><%= money[tx.amount_cents] %></td>
                  <td class="[font-variant-numeric:tabular-nums] text-sm"><%= tx.request_id %></td>
                  <td class="text-right">
                    <%= link_to "Receipt", teller_receipt_path(request_id: tx.request_id), class: "btn btn-ghost btn-sm", target: "_blank" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  <% end %>
</div>