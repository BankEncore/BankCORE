<%= render "teller/shared/page_header",
  title: "Session",
  description: "Open or close teller session and assign drawer before starting transactions.",
  secondary_button_path: teller_context_path,
  secondary_button_label: "Branch / Workstation Settings",
  primary_button_path: teller_root_path,
  primary_button_label: "Go to Transaction Flows" %>

<%= render "teller/dashboard/teller_session_card", teller_session: @teller_session, drawers: @drawers %>

<section class="card bg-base-100 border border-base-300">
  <div class="card-body">
    <div class="flex items-start justify-between gap-3">
      <div>
        <h2 class="card-title text-base">Context Settings</h2>
        <p class="text-xs text-slate-600 mt-1">Need to change branch or workstation?</p>
      </div>
    </div>
    <div class="divider my-3"></div>
    <div>
      <%= link_to "Open Branch / Workstation Settings", teller_context_path, class: "btn btn-ghost btn-sm" %>
    </div>
  </div>
</section>
