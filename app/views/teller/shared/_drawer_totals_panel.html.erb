<section aria-label="Drawer Totals" class="card bg-base-100 border border-base-300">
  <div class="card-body p-3 md:p-4">
    <div>
      <h2 class="card-title text-sm">Drawer Totals</h2>
      <p class="text-xs text-slate-600 mt-1">Cash and checks in drawer.</p>
    </div>

    <div class="divider my-3"></div>

    <% cash = (teller_session&.expected_cash_cents || 0) / 100.0 %>

    <div class="space-y-3">
      <div>
        <div class="text-[11px] uppercase tracking-wide text-slate-500">Cash on hand</div>
        <div class="mono tabular-nums text-sm text-slate-900 mt-1"><%= number_to_currency(cash) %></div>
      </div>

      <div>
        <div class="text-[11px] uppercase tracking-wide text-slate-500">Checks on hand</div>
        <div class="mono tabular-nums text-sm text-slate-900 mt-1">$0.00</div>
      </div>

      <div class="rounded-md border border-base-300 bg-base-200 p-3">
        <div class="text-[11px] uppercase tracking-wide text-slate-600">Net position</div>
        <div class="mono tabular-nums text-base font-semibold text-slate-900 mt-1"><%= number_to_currency(cash) %></div>
      </div>
    </div>

    <div class="mt-3 pt-3 border-t border-base-300 flex gap-2">
      <button type="button" class="btn btn-outline btn-sm">Count</button>
      <button type="button" class="btn btn-ghost btn-sm">Details</button>
    </div>
  </div>
</section>