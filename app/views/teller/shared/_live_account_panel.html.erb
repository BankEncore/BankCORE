<section aria-label="Account Snapshot"
         class="card bg-base-100 border border-base-300"
         hidden
         data-live-account-panel-target="panel">
  <div class="card-body p-4">
    <div>
      <h2 class="card-title text-base">Account Snapshot</h2>
      <p class="text-xs text-slate-600 mt-1">Live balance for primary account.</p>
    </div>

    <div class="divider my-3"></div>

    <div data-live-account-panel-target="content" class="space-y-3">
      <div>
        <div class="text-[11px] uppercase tracking-wide text-slate-500">Account</div>
        <div class="mono tabular-nums text-sm text-slate-900 mt-1"
             data-live-account-panel-target="accountNumberContainer">—</div>
      </div>

      <div>
        <div class="text-[11px] uppercase tracking-wide text-slate-500">Primary owner</div>
        <div class="text-sm text-slate-900 mt-1 leading-snug break-words"
             data-live-account-panel-target="primaryOwner">—</div>
      </div>

      <div class="grid grid-cols-2 gap-3">
        <div>
          <div class="text-[11px] uppercase tracking-wide text-slate-500">Ledger</div>
          <div class="mono tabular-nums text-sm text-slate-900 mt-1"
               data-live-account-panel-target="ledgerBalance">$0.00</div>
        </div>

        <div class="text-right">
          <div class="text-[11px] uppercase tracking-wide text-slate-500">Pending</div>
          <div class="mono tabular-nums text-sm text-slate-900 mt-1"
               data-live-account-panel-target="pending">$0.00</div>
        </div>
      </div>

      <div class="rounded-md border border-base-300 bg-base-200 p-3">
        <div class="text-[11px] uppercase tracking-wide text-slate-600">Projected</div>
        <div class="mono tabular-nums text-base font-semibold text-slate-900 mt-1"
             data-live-account-panel-target="projectedBalance">$0.00</div>
      </div>
    </div>

    <p class="text-sm text-slate-600 hidden mt-3"
       data-live-account-panel-target="unrecognizedMessage">Unrecognized account number.</p>
  </div>
</section>