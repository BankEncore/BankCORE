<section aria-label="Posting Readiness" class="card bg-base-100 border border-base-300">
  <div class="card-body p-3 md:p-4">
    <div class="flex items-start justify-between gap-3">
      <div>
        <h2 class="card-title text-base">Posting Readiness</h2>
        <p class="text-xs text-slate-600 mt-1">Request ID and readiness status.</p>
      </div>
    </div>

    <div class="divider my-3"></div>

    <div class="space-y-3">
      <div>
        <div class="text-xs text-slate-500 whitespace-nowrap">Request ID</div>
        <div class="mono text-xs text-slate-900 break-all leading-snug mt-1" data-posting-form-target="summaryRequestId">N/A</div>
      </div>

      <div class="grid grid-cols-[auto_1fr] gap-x-3 gap-y-1 items-start">
        <div class="text-xs text-slate-500 whitespace-nowrap mt-0.5">Status</div>
        <div class="text-right">
          <div class="inline-flex items-center justify-end gap-2 flex-wrap">
            <span class="badge badge-neutral" data-posting-form-target="summaryReadinessBadge">Blocked</span>
            <span class="text-xs text-slate-600 leading-snug" data-posting-form-target="summaryReadinessReason">Amount must be greater than zero.</span>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-3 pt-3 border-t border-base-300">
      <button type="button" class="btn btn-ghost btn-sm" data-action="click->reference-panel#copyLastAccount">Use last account</button>
    </div>
  </div>
</section>