<%# Two-tier header matching bankcore_mockup: Tier 1 = identity + actions, Tier 2 = context bar %>
<header class="border-b border-base-300 bg-base-100">
  <div class="mx-auto max-w-7xl px-4 py-3">
    <div class="navbar">
      <div class="flex items-center gap-3">
        <%= link_to "BankCORE", root_path, class: "font-semibold tracking-tight" %>
        <span class="badge badge-outline">Workstation</span>
      </div>

      <div class="flex items-center gap-2">
        <%= link_to "Help", "#", class: "btn btn-ghost btn-sm" %>
        <%= link_to "Switch Branch", teller_context_path, class: "btn btn-outline btn-sm" %>
        <%= button_to "Sign Out", session_path, method: :delete, class: "btn btn-primary btn-sm" %>
      </div>
    </div>

    <div class="mt-2 text-xs text-slate-600">
      Branch <span class="font-medium text-slate-800"><%= current_branch&.name || "—" %></span>
      <span class="opacity-50">•</span>
      Workstation <span class="font-medium text-slate-800"><%= current_workstation&.name || "—" %></span>
      <span class="opacity-50">•</span>
      Teller <span class="font-medium text-slate-800"><%= Current.user&.email_address || "—" %></span>
      <span class="opacity-50">•</span>
      Session <span class="font-medium text-slate-800 mono"><%= teller_session&.id || "—" %></span>
      <span class="opacity-50">•</span>
      <span class="font-medium text-slate-800 mono tabular-nums"><%= Time.current.strftime("%b %-d, %Y %-l:%M %p") %></span>
    </div>
  </div>
</header>
