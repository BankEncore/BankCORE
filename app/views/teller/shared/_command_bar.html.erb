<nav aria-label="Teller Commands" class="border-b border-base-300 bg-base-100 px-3 py-2" data-testid="command-bar">
  <div class="flex flex-wrap items-center gap-2">
    <% active = ->(path) { current_page?(path) ? "btn-active" : "" } %>

    <%= link_to "Workspace", teller_root_path, class: "btn btn-sm btn-ghost #{active.call(teller_root_path)}", aria: (current_page?(teller_root_path) ? { current: "page" } : {}) %>
    <%= link_to "History", teller_history_path, class: "btn btn-sm btn-ghost #{active.call(teller_history_path)}", aria: (current_page?(teller_history_path) ? { current: "page" } : {}) %>

    <div class="h-5 w-px bg-base-300/70 mx-1"></div>

    <%= link_to "Deposit", new_teller_deposit_path, class: "btn btn-sm btn-ghost #{active.call(new_teller_deposit_path)}" %>
    <%= link_to "Withdrawal", new_teller_withdrawal_path, class: "btn btn-sm btn-ghost #{active.call(new_teller_withdrawal_path)}" %>
    <%= link_to "Check Cashing", new_teller_check_cashing_path, class: "btn btn-sm btn-ghost #{active.call(new_teller_check_cashing_path)}" %>
    <%= link_to "Transfer", new_teller_transfer_path, class: "btn btn-sm btn-ghost #{active.call(new_teller_transfer_path)}" %>

    <div class="h-5 w-px bg-base-300/70 mx-1"></div>

    <button type="button" class="btn btn-sm btn-ghost btn-disabled" disabled aria-disabled="true">Bank Draft</button>
    <button type="button" class="btn btn-sm btn-ghost btn-disabled" disabled aria-disabled="true">Bill Payment</button>
    <button type="button" class="btn btn-sm btn-ghost btn-disabled" disabled aria-disabled="true">Misc Receipt</button>
    <button type="button" class="btn btn-sm btn-ghost btn-disabled" disabled aria-disabled="true">Vault Transfer</button>

    <div class="flex-1"></div>

    <%= link_to "Session", new_teller_teller_session_path, class: "btn btn-sm btn-outline #{active.call(new_teller_teller_session_path)}" %>
  </div>
</nav>