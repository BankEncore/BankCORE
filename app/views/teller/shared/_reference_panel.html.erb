<section aria-label="Reference Panel" class="ui-panel bg-base-200 border border-base-300 rounded-lg lg:sticky lg:top-4 h-fit">
  <div class="ui-panel-pad p-3 md:p-4 text-sm">
    <div class="flex items-start justify-between gap-3">
      <div>
        <h2 class="card-title text-base">Account Reference</h2>
        <p class="text-xs text-slate-600 mt-1">Transaction snapshot and posting totals.</p>
      </div>
    </div>
    <div class="divider my-3"></div>

    <p class="font-semibold mt-2">Advisories</p>
    <div data-posting-form-target="advisoriesSection" data-reference-panel-target="advisoriesContainer">
      <p class="text-xs opacity-70" data-posting-form-target="advisoriesPlaceholder">Select an account to view advisories.</p>
      <div data-posting-form-target="advisoriesList" class="space-y-2 mt-2" hidden></div>
      <a data-posting-form-target="advisoriesViewAllLink" href="#" class="text-xs link link-hover mt-2 block" hidden>View all advisories</a>
    </div>

    <div class="divider my-2"></div>
    <p class="font-semibold mt-2">Transaction Snapshot</p>
    <dl class="space-y-1">
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Type</dt>
        <dd class="ui-kv-value text-sm" data-posting-form-target="summaryTransactionType">N/A</dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Primary Account</dt>
        <dd class="ui-kv-value text-sm" data-posting-form-target="primaryReferenceValue">N/A</dd>
      </div>
      <div data-posting-form-target="counterpartyReferencePanel" hidden>
        <div class="ui-kv-row">
          <dt class="ui-kv-key text-xs">Counterparty</dt>
          <dd class="ui-kv-value text-sm" data-posting-form-target="counterpartyReferenceValue">N/A</dd>
        </div>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Request ID</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="summaryRequestId">N/A</dd>
      </div>
    </dl>

    <div class="divider my-2"></div>
    <p class="font-semibold">Amounts</p>
    <dl class="space-y-1">
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Entered Cash</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="cashSubtotal">$0.00</dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Check Subtotal</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="checkSubtotal">$0.00</dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Effective Total</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="totalAmount">$0.00</dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Debits / Credits</dt>
        <dd class="ui-kv-value text-sm mono"><span data-posting-form-target="debitTotal">$0.00</span> / <span data-posting-form-target="creditTotal">$0.00</span></dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Imbalance</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="imbalance">$0.00</dd>
      </div>
    </dl>

    <div class="divider my-2"></div>
    <p class="font-semibold">Cash Impact</p>
    <dl class="space-y-1">
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Cash In</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="summaryCashIn">$0.00</dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Cash Out</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="summaryCashOut">$0.00</dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Net Drawer Impact</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="cashImpact">$0.00</dd>
      </div>
      <div class="ui-kv-row">
        <dt class="ui-kv-key text-xs">Projected Drawer</dt>
        <dd class="ui-kv-value text-sm mono" data-posting-form-target="projectedDrawer">$0.00</dd>
      </div>
    </dl>

    <div class="divider my-2"></div>
    <p class="font-semibold">Posting Readiness</p>
    <div class="flex items-center justify-between gap-2">
      <span class="badge badge-neutral" data-posting-form-target="summaryReadinessBadge">Blocked</span>
      <span class="text-xs opacity-70" data-posting-form-target="summaryReadinessReason">Amount must be greater than zero.</span>
    </div>
  </div>
</section>