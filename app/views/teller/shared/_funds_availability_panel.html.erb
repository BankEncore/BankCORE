<section aria-label="Funds Availability" class="card bg-base-100 border border-base-300" data-posting-form-target="availabilitySection" hidden>
  <div class="card-body p-3 md:p-4">
    <div class="flex items-start justify-between gap-3">
      <div>
        <h2 class="card-title text-base">Funds Availability</h2>
        <p class="text-xs text-slate-600 mt-1">When funds will be available after posting.</p>
      </div>
    </div>

    <div class="divider my-3"></div>

    <table class="w-full text-sm table-fixed">
      <thead>
        <tr class="t-head row-border">
          <th class="py-2 text-left w-2/3">Availability</th>
          <th class="py-2 text-right w-1/3 tabular-nums">Amount</th>
        </tr>
      </thead>
      <tbody data-posting-form-target="availabilityBody"
             class="[&>tr>td]:py-2 [&>tr]:row-border"></tbody>
    </table>

    <p class="mt-2 text-xs text-slate-600" data-posting-form-target="availabilityEmpty">Enter cash and/or checks to see availability.</p>
  </div>
</section>